<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE8E8">

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            android:textColor="#062B77"
            android:textSize="60px"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="VĐ"
            android:textColor="#0189ff"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/bieuDo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Biểu đồ"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/linkMoneyAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bieuDo"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:text="THÁNG 4/2023"
        android:textSize="18dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/linkMoneyAnalysis"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bottom_home_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThemKhoanThu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/wallet_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:text="Bạn chưa có khoản chi nào"
            android:textColor="#ccc"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnThemKhoanChiTieu"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:background="@drawable/buton_radius"
            android:backgroundTint="#0189ff"
            android:text="Thêm khoản chi"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/swapanalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/user"
        android:backgroundTint="#2196F3"
        android:src="@drawable/baseline_format_list_bulleted_24" />

</RelativeLayout>