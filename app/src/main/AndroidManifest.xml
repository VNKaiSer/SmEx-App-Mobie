<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmExAppAndroid"
        tools:targetApi="31">
        <activity
            android:name=".views.Splash"
            android:exported="false" />
        <activity
            android:name=".views.Home"
            android:exported="false" />
        <activity
            android:name=".views.Spending"
            android:exported="false" />
        <activity
            android:name=".views.SettingGeneral"
            android:exported="false" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.PlanFrg"
            android:exported="false" />

        <provider
            android:authorities="com.example.smex.KhoanChiProvider"
            android:name=".repositories.KhoanChiProvider"/>
        <provider
            android:authorities="com.example.smex.KhoanThuProvider"
            android:name=".repositories.KhoanThuProvider"/>
    </application>

</manifest>
